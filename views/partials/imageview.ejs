<!DOCTYPE html>
<html lang="en">
<%- include('./header') %>


<style>
  .hover {
    color: slategrey;
  }

  .hover:hover {
    border: 1px solid rgba(4, 104, 255, 0.671);

    transition: border 0.2s ease-in-out;
    color: var(--main-color);
  }

  .hover-png {

    cursor: pointer;
  }

  .hover-png:hover {
    background-color: aquamarine;
    transition: all 0.2s ease-in-out;
  }
</style>

<body>



  <div class="container">
    <%- include('./navbar') %>


    <!-- main content -->
    <div class="input-group my-3 justify-content-center">
      <input type="text" class="form-control form-control-lg " style="max-width: 500px;  border-radius: 0.5rem;  " placeholder="Search..." aria-label="Search">
      <!-- <div class="input-group-append">
          <button class="btn btn-outline-secondary" type="button">Search</button>
        </div> -->
    </div>



    <div class="row">

      <div class="col-2">
        <h3>STYLE</h3>
        <!-- side panel -->
        <div class="list-group ">
          <a href="#" class=" m-1 rounded-3 hover p-2 "><i class="fas fa-star me-2"></i> Star</a>
          <a href="#" class=" m-1 rounded-3 hover p-2 "><i class="fas fa-smile me-2"></i> Emoji</a>
          <a href="#" class=" m-1 rounded-3 hover p-2 "><i class="fas fa-bolt me-2"></i> Electronic</a>




        </div>
      </div>

      <div class="col-10" style="background-color: #F0F1F3;">

        <div class="row py-3">
          <div class="d-flex m-1">
            <h3 class="me-auto"><%= image.name %></h3>
          </div>
          <div class="col" style="max-width: 500px; min-width: 500px;">
            <div class=" p-2 rounded-4 bg-light text-center">

              <img src="<%= image.path %>" class="img-fluid" style="width: 100%; height: auto;" alt="...">



            </div>

            <div class="my-2">
              <a onclick="downloadImage(this)" id="download" class="p-2 rounded-2 btn btn-success w-100" style="background-color: var(--main-color)">Download</a>
            </div>

            <script>
              function downloadImage(element) {
                let image = document.querySelector('img');
                let url = image.src;
                let filename = url.substring(url.lastIndexOf('/') + 1);
                element.href = url;
                element.download = filename;
              }
            </script>





          </div>


        </div>


      </div>


</body>

</html>